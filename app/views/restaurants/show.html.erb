<div class="card" id="restaurant-card">
  <h1><%= @restaurant.name %></h1>
  <h3><br><%= @restaurant.address %></h3>
  <h5><br><%= @restaurant.phone_number %></h5>

  <br>

  <% @restaurant.reviews.each do |review| %>
    <p>Reviews</p>
    <li>- <%= review.content %>(<%= "⭐️" * review.rating  %>)</li>
  <% end %>
</div>

<div class="review">
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary mx-auto"%>
</div>
